<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="email_template_project_party_two" model="mail.template">
      <field name="name">Project Participation - Party 2</field>
      <field name="model_id" ref="sale.model_sale_order"/>
      <field name="subject">Project Participation Request</field>
      <field name="email_from">${(object.company_id.email or 'noreply@example.com')}</field>
      <field name="email_to">${object.party_two_email}</field>
      <field name="body_html"><![CDATA[
        <p>Hello ${object.party_two_name or ''},</p>
        <p>You have been added to project <b>${object.project_name}</b> as ${object.party_two_role}.</p>
        <p><a href="${ctx.get('approval_link')}">Click here to approve or reject</a></p>
        <p>Thanks.</p>
      ]]></field>
    </record>

    <record id="email_template_project_party_three" model="mail.template">
      <field name="name">Project Participation - Party 3</field>
      <field name="model_id" ref="sale.model_sale_order"/>
      <field name="subject">Project Participation Request</field>
      <field name="email_from">${(object.company_id.email or 'noreply@example.com')}</field>
      <field name="email_to">${object.party_three_email}</field>
      <field name="body_html"><![CDATA[
        <p>Hello ${object.party_three_name or ''},</p>
        <p>You have been added to project <b>${object.project_name}</b> as ${object.party_three_role}.</p>
        <p><a href="${ctx.get('approval_link')}">Click here to approve or reject</a></p>
        <p>Thanks.</p>
      ]]></field>
    </record>
  </data>
</odoo>
