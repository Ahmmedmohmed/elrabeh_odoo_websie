       <script>
  document.addEventListener('DOMContentLoaded', function () {
    const selector = document.querySelector('.currency-selector');

    function updateVisibleContact(value) {
      // أخفي كل البلوكات
      document.querySelectorAll('.contact-info').forEach(el => el.classList.add('d-none'));

      // حدد اسم الدولة من قيمة select
      let country = '';
      if (value === '9') country = 'ksa';
      else if (value === '7') country = 'oman';
      else if (value === '8') country = 'qatar';

      // أظهر العنصر المناسب
      if (country) {
        const block = document.querySelector(`.contact-${country}`);
        if (block) block.classList.remove('d-none');
      }
    }

    // أول تحميل
    updateVisibleContact(selector.value);

    // عند التغيير
    selector.addEventListener('change', function () {
      updateVisibleContact(this.value);
    });
  });
</script>


