<?xml version="1.0" encoding="utf-8"?>
<odoo>

 <data>

    <template id="build_project_detail_page" name="Project Detail Page">
  <t t-call="website.layout">

    <div class="wrap-ar">
      <div class="container my-5 text-end">
              <t t-if="request.session.get('add_product_message')">
          <div class="alert alert-info" role="alert">
              <t t-esc="request.session.pop('add_product_message')"/>
          </div>
      </t>
        <h2>المشروع: <t t-esc="project.name"/></h2>

        <h3 class="mt-4">التصنيفات والمنتجات</h3>
        <t t-foreach="products_by_category" t-as="cat_data">
          <div class="my-3">
            <h5><t t-esc="cat_data['category'].name"/></h5>
            <div class="row">
              <t t-foreach="cat_data['products']" t-as="product">
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <img t-att-src="'/web/image/product.product/' + str(product.id) + '/image_1920'" class="card-img-top"/>
                    <div class="card-body">
                      <h5 class="card-title"><t t-esc="product.name"/></h5>
                      <p><t t-esc="product.list_price"/> </p>
                      <t t-if="product in project.product_ids">
                        <a t-attf-href="/remove_product_from_project/{{project.id}}/{{product.id}}" class="btn btn-danger btn-sm">إزالة</a>
                      </t>
                      <t t-else="">
                        <a t-attf-href="/add_product_to_project/{{project.id}}/{{product.id}}" class="btn btn-primary btn-sm">إضافة</a>
                      </t>
                    </div>
                  </div>
                </div>
              </t>
            </div>
          </div>
        </t>

        <hr class="my-4"/>

        <h3>منتجاتي بالمشروع</h3>
<t t-foreach="my_products_by_category" t-as="cat_data">
  <div class="my-3">
    <h5><t t-esc="cat_data['category'].name"/></h5>
    <div class="row">
      <t t-foreach="cat_data['products']" t-as="product">
        <div class="col-md-4 mb-3">
          <div class="card border-success">
            <img t-att-src="'/web/image/product.product/' + str(product.id) + '/image_1920'" class="card-img-top"/>
            <div class="card-body">
              <h5 class="card-title"><t t-esc="product.name"/></h5>
              <p><t t-esc="product.list_price"/> </p>
              <a t-attf-href="/remove_product_from_project/{{project.id}}/{{product.id}}" class="btn btn-danger btn-sm">إزالة</a>
            </div>
          </div>
        </div>
      </t>
    </div>
  </div>
</t>

       <div class="text-center my-4">
<a t-att-href="'/add_to_cart/%s' % project.id" class="btn btn-success">إضافة الكل إلى السلة</a>
<a t-att-href="'/remove_from_cart/%s' % project.id" class="btn btn-secondary">إزالة الكل من السلة</a>
</div>

      </div>
    </div>

  </t>
</template>
</data>
</odoo>


