<odoo>
    <data>
        <template id="my_projects_template" name="My Projects">
            <t t-call="website.layout">
                <section class="container mt-5">
                    <h2 class="mb-4 text-center">مشاريعي</h2>
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="list-group shadow-sm">
                                <t t-if="orders">
                                    <t t-foreach="orders" t-as="order">
                                        <a t-att-href="'/project-status/%s' % order.id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                            <span><t t-esc="order.project_name"/></span>
                                            <span class="badge bg-primary rounded-pill">
                                                <t t-esc="order.contract_value or 'بدون قيمة'"/> &#x20AC;
                                            </span>
                                        </a>
                                    </t>
                                </t>
                                <t t-else="">
                                    <p class="text-center my-4">لا توجد مشاريع حالياً</p>
                                </t>
                            </div>
                            <div class="mt-4 text-center">
                                <a href="/project/create" class="btn btn-success btn-lg px-4">
                                    <i class="fa fa-plus me-2"></i> إنشاء مشروع جديد
                                </a>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </template>
    </data>
</odoo>
